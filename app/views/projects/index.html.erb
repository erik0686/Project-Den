<%= image_tag("index-background.png", class: "imagenprinc") %>
<div class="image-hot-project">
  <%= image_tag("projectos_hot.png", class: "hot-project") %>
</div>


<div class="row" style="text-align: center; width: 100% ">  
  <% @projects.each do |project| %>
    <div class="col" style="width: 20%; float: left; padding: 10px 10px">
      <div class="card" style="width:100%">
        <div class="card-image" style="width:100%">
          <%= image_tag("index-background.png", class: "foto-tarjeta", style:"width:100%; height:200px") %>
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <h5><%= project.name %></h5>
            <% get_project_tags(project).each do |tag| %>
              <p><%= tag %></p>
            <% end %>
          </div>
          <div class="card-action">
            <a href="#">Conoce mas</a>
          </div>
        </div>
      </div>
    <%= link_to "Inscribirse", {controller: "project_user", action: "create",  user_id: current_user.id,  project_id: project.id}, method: "post", class: "Inscripcion" %>
    </div>
  <% end %>

</div>



<div id="mapa" style="height: 100%; background-color:green"></div>



