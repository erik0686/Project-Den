<%= image_tag("index-background.png", class: "imagenprinc") %>
<div class="image-hot-project">
  <%= image_tag("projectos_hot.png", class: "hot-project") %>
</div>


<div class="row" style="text-align: center">  
  <% @projects.each do |project| %>
    <div class="col s1 m3">
      <div class="card">
        <div class="card-image">
          <div class="card-image">
            <%= image_tag("index-background.png", class: "foto-tarjeta") %>
          </div>
          <div class="card-stacked">
            <div class="card-content">
              <h5><%= project.name %></h5>
              <% get_project_tags(project).each do |tag| %>
                <p><%= tag %></p>
              <% end %>
            </div>
            <div class="card-action">
              <a data-toggle="modal" data-target="#paginaweb" href="#">Conoce mas</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<footer style="margin-top: 40px">
  <div class="container text-center">
    <hr>
      <div class="row">
          <div class="col-lg-12">
              <ul class="nav nav-pills nav-justified">
                  <li><a href="/">© 2017 Poncho el pato.</a></li>
                  <li><a href="#">Términos de servicio</a></li>
                  <li><a href="#">Privacidad</a></li>
              </ul>
          </div>
      </div>
  </div>
</footer>
